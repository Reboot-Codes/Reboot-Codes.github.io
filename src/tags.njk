---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - post
    - allPosts
    - project
    - allProjects
  addAllPagesToCollections: true
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: Tagged "{{ tag }}"
isBlog: true
---

<h1>Tagged "{{ tag }}"</h1>

<div id="taggedposts" class="tagged-posts">
{% for post in (collections[ tag ] | reverse) %}
  <a class="tagged-post transition" href="{{ post.url }}">
    <p>{{ post.data.title }}</p>
    <p>on {{ post.page.date | formatDate }}</p>
  </a>
{% endfor %}
</div>
